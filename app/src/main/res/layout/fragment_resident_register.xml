<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".ui.resident.ResidentRegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fmResidentRegisterLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/fmResidentRegisterError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="11sp"
                app:lineHeight="20dp" />


            <EditText
                android:id="@+id/fmResidentRegisterName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints="name"
                android:background="@drawable/background_btn1"
                android:paddingLeft="10dp"
                android:ems="10"
                android:hint="Name Trip"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/fmResidentRegisterDestination"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Destination"
                android:background="@drawable/background_btn1"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/fmResidentRegisterStartDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:background="@drawable/background_btn1"
                android:ems="10"
                android:hint="@string/label_start_date"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fmResidentRegisterDescription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:background="@drawable/background_btn1"
                android:ems="10"
                android:hint="Transport"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fmResidentRegisterParticipants"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Total Cost of Trip"
                android:background="@drawable/background_btn1"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fmResidentRegisterNote"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:autofillHints=""
                android:background="@drawable/background_btn1"
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/fmResidentRegisterOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="20dp"
                android:text="Risk"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/fmResidentRegisterButton"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:text="ADD TRIP"
                android:textSize="25sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>